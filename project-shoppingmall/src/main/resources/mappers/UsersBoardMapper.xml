 	<update id="update" parameterType="UserVO">
		update
			cboard
		set
			subject=#{subject}, content=#{content}, regDate=SYSDATE, ipAddress=#{ipAddress}
		where
			id=#{id}
	</update>
	-->
	<!-- 6. 삭제
	
	<delete id="delete" parameterType="int">
		delete from cboard where id=#{id}
	</delete>
	 -->
 	
</mapper>